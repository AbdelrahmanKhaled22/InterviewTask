@model InvoiceDetails


<h1>Are you sure you want to delete this invoice?</h1>


<h3>@Model.productName</h3>


<form asp-controller="Invoices" asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="lineNo" value="@Model.lineNo"/>
    <button type="submit" class="btn btn-danger">Delete</button>
</form>